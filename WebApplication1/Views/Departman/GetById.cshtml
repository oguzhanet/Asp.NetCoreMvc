@model WebApplication1.Models.Departman
@{
    ViewData["Title"] = "GetById";
    Layout = "~/Views/Shared/_LayoutTes1.cshtml";
}

<br />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

@using (Html.BeginForm("Update", "Departman", FormMethod.Post))
{
    <b>Departman Id</b>
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
    <br />
    <b>Departman Adı</b>
    @Html.TextBoxFor(x => x.DepartmanName, new { @class = "form-control" })
    <br />
    <button class="btn btn-default" style="background-color:#ff6a00; color:white;">Departman Güncelle</button>
}
